        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sampleGL="clr-namespace:Silk.WPF.OpenGL.Scene"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="900"
        Width="1600"
        WindowStartupLocation="CenterScreen">

    <TabControl>
        <TabItem Header="OpenGL Silk">
            <UniformGrid Rows="2"
                         Columns="2">
                <sampleGL:RadarScene />
                <sampleGL:RadarScene />
                <sampleGL:RadarScene />
                <sampleGL:RadarScene />
            </UniformGrid>
        </TabItem>
    </TabControl>
</Window>
